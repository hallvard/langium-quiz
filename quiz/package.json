{
    "name": "quiz",
    "displayName": "quiz",
    "description": "description",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "quiz",
            "aliases": ["Quiz", "quiz"],
            "extensions": [".quiz"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "quiz",
            "scopeName": "source.quiz",
            "path": "./syntaxes/quiz.tmLanguage.json"
        }],
        "commands": [{
            "command": "quiz.generateHtml",
            "title": "Generate HTML",
            "category": "Quiz"
        }],
        "menus": {
            "explorer/context": [{
                "command": "quiz.generateHtml",
                "when": "resourceLangId == quiz"
            }],
            "editor/context": [{
                "command": "quiz.generateHtml",
                "when": "resourceLangId == quiz"
            }],
            "commandPalette": [{
                "command": "quiz.generateHtml",
                "when": "editorLangId == quiz"
            }]
        }
    },
    "activationEvents": [
        "onLanguage:quiz",
        "onCommand:quiz.generateHtml"
    ],
    "main": "./out/extension.js",
    "langium": {
        "languageId": "quiz",
        "grammar": "src/language-server/quiz.langium",
        "extensions": [".quiz"],
        "out": "src/language-server/generated",
        "textMate": {
            "out": "syntaxes/quiz.tmLanguage.json"
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "webpack",
        "watch": "webpack --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate"
    },
    "dependencies": {
        "langium": "^0.1.0",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0"
    },
    "devDependencies": {
        "@types/node": "^14.17.3",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "copy-webpack-plugin": "^9.0.0",
        "eslint": "^7.19.0",
        "langium-cli": "^0.1.0",
        "source-map-loader": "^3.0.0",
        "ts-loader": "^9.2.3",
        "typescript": "^4.1.3",
        "webpack": "^5.39.1",
        "webpack-cli": "^4.7.2"
    }
}
